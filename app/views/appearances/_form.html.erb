<%= form_with(model: appearance) do |form| %>
  <% if appearance.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(appearance.errors.count, "error") %> prohibited this appearance from being saved:</h2>

      <ul>
        <% appearance.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :name, style: "display: block" %>
    <%= form.text_field :name %>
    <%= form.label :timezone, style: "display: block" %>
    <%= form.text_field :default_timezone %>


    <script type="text/javascript" language="JavaScript">
      var timezone = Intl.DateTimeFormat().resolvedOptions().timeZone
      document.querySelector('#appearance_default_timezone').value = timezone
    </script>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
